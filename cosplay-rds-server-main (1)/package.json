  "scripts": {
    "start": "npm run build & node -r ./tsconfig-paths-bootstrap.js .",
    "start:dev": "node -r dotenv/config -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
    "dev": "nodemon",
    "build": "tsc --project tsconfig.base.json",
    "build:all": "yarn run generate && yarn run build",
    "lint": "eslint src test",
    "fix": "eslint --fix src test",
    "clean": "rm -rf ./build",
    "test": "yarn seed:test && DATABASE_URL=postgresql://root:root@localhost:5432/cosplayTest jest --coverage --verbose --detectOpenHandles --forceExit",
    "ci:test": "DATABASE_URL=postgresql://root:root@localhost:5432/cosplayTest jest --coverage --verbose --detectOpenHandles --forceExit",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:test": "DATABASE_URL=postgresql://root:root@localhost:5432/cosplayTest prisma migrate dev",
    "reset:test": "DATABASE_URL=postgresql://root:root@localhost:5432/cosplayTest prisma migrate reset -f",
    "seed:test": "DATABASE_URL=postgresql://root:root@localhost:5432/cosplayTest ts-node prisma/seed.ts",
    "generate": "prisma generate",
    "setup:test": "docker-compose up -d",
    "bundle:dev": "yarn run clean && cross-env NODE_ENV=development gulp",
    "bundle:prod": "yarn run clean && cross-env NODE_ENV=production gulp"
  }
}
